{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup Minecraft Forge",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "windows": {
        "command": "${workspaceFolder}/gradlew.bat"
      },
      "args": [
        "setupDecompWorkspace"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Dev Client",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "windows": {
        "command": "${workspaceFolder}/gradlew.bat"
      },
      "args": [
        "runClient"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    
    {
      "label": "Build Minecraft Mod",
      "type": "shell",
      "command": "${workspaceFolder}/gradlew",
      "windows": {
        "command": "${workspaceFolder}/gradlew.bat"
      },
      "args": [
        "build"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
